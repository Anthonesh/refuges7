{% extends 'base.html.twig' %}

{% block title %}Calendrier des bénévolats{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('styles/calendar.css')}}">
    <link rel="stylesheet" href="{{asset('styles/popover.css')}}">
    <link rel="stylesheet" href="{{asset('styles/carousel.css')}}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/calendrierBenevolat.js') }}"></script> 
        <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js" integrity="sha256-J37ZtjEw94oWBNZ9w/XC73raGXE9t10//XHJfKz2QCM=" crossorigin="anonymous"></script>     
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% block main %}
    <div id="volunteer-calendar" data-events="{{ events|json_encode|e('html_attr') }}">
    </div>


    <!-- Modal -->
<!-- Modal pour la sélection des créneaux horaires -->
<div class="modal fade" id="timeSlotModal" tabindex="-1" aria-labelledby="timeSlotModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reservationModalLabel">Réserver un créneau</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="heure_debut">Heure de début :</label>
                    <select class="form-control" id="heure_debut"></select>
                </div>
                <div class="form-group">
                    <label for="heure_fin">Heure de fin :</label>
                    <select class="form-control" id="heure_fin"></select>
                </div>
                <div class="form-group">
                    <label for="nombre_participants">Nombre de participants :</label>
                    <input type="number" class="form-control" id="nombre_participants" placeholder="Nombre de participants">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnNextStep" class="btn btn-primary">Étape suivante</button>
            </div>
        </div>
    </div>
</div>

    {% include 'components/carousel.html.twig'%}
{% endblock %}
